@model IEnumerable<Scooterki.Models.Scooters_table>

@{
    ViewBag.Title = "Scooterki";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["message"] != null)
{
    <p class="alert-success">@TempData["message"]</p>
}

<h2>Scooter List</h2>

<p>
    @Html.ActionLink("Add Scooter", "AddNewScooter")
</p>
<table class="table">
    <tr>
        <th>
            Picture
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Power)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vmax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Avilability
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src=@Html.DisplayFor(modelItem => item.PictureSrc) height=75 width=auto>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Power)W
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vmax)<h9>km/h</h9>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if (item.IsAvilable == 0)
                {
                    <font color="red">NO</font>
                }
                else
                {
                    <font color="green">YES</font>
                }

            </td>
            <td>
                @Html.ActionLink("Rent", "RentScooter", new { id = item.Id }) |
                @Html.ActionLink("Edit", "EditScooter", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "RemoveScooter", new { id = item.Id })
            </td>
        </tr>
    }

</table>
