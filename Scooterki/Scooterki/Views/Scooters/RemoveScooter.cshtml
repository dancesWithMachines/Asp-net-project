@model Scooterki.Models.Scooters_table

@{
    ViewBag.Title = "RemoveScooter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Remove scooter</h2>

@if (!Model.UserId.Equals(null))
{
    <h2><font color="red">This scooter is beeing reserved!!!</font></h2>
}

<h3>Are you sure you want to remove this scooter?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Power)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Power)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Vmax)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vmax)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsAvilable)
        </dt>

        <dd>
            @if (Model.IsAvilable.Equals(0))
            {
                <font color="red">NO</font>
            }
            else
            {
                <font color="green">YES</font>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PictureSrc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PictureSrc)
        </dd>

        <dt>
            @if (!Model.UserId.Equals(null))
            {
                @Html.DisplayNameFor(model => model.UserId)
            }
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserId)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("No, take me back", "Index")
        </div>
    }
</div>
